# ansible

config_file: host_vars/default.yml

# server
dev: False
sign_images: True
server: "http://localhost:5000"
server_user: root
server_dir: /vagrant
updater_dir: updater
updater_threads: 4
worker:
    - "/tmp/worker"
active_distros:
    - lime
    - openwrt

# database
database_type: PostgreSQL Unicode
database_address: localhost
database_name: attendedsysupgrade
database_user: postgres
database_pass: changeme
database_port: 5432

# folder
imagebuilder_folder: imagebuilder
distro_folder: distributions
download_folder: download
tempdir: /tmp
keys_private: keys
keys_public: server/static/keys
